generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id             String   @id @default(uuid())
  fullName       String
  nickName       String?
  cpf            String   @unique
  birthday       DateTime @db.Date
  zip            String
  state          String
  city           String
  fullAddress    String
  neighborhood   String
  addressDetails String?
  foneMobile     String   @unique
  foneHome       String?
  foneCompany    String?
  email          String   @unique
  password       String
  createdAt      DateTime @default(now())

  @@map("students")
}
